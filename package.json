{
    "name": "ratelimit-benchmark",
    "version": "1.0.0",
    "description": "Benchmark for Redis and Valkey rate limiters with TypeScript",
    "main": "dist/server/index.js",
    "type": "module",
    "scripts": {
        "start": "node dist/server/index.js",
        "build": "tsc",
        "dev": "ts-node-dev src/server/index.ts",
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "start:valkey-glide": "MODE=valkey-glide node dist/server/index.js",
        "start:iovalkey": "MODE=iovalkey node dist/server/index.js",
        "start:ioredis": "MODE=ioredis node dist/server/index.js",
        "start:valkey-glide:cluster": "MODE=valkey-glide USE_VALKEY_CLUSTER=true node dist/server/index.js",
        "start:iovalkey:cluster": "MODE=iovalkey USE_VALKEY_CLUSTER=true node dist/server/index.js",
        "start:ioredis:cluster": "MODE=ioredis USE_REDIS_CLUSTER=true node dist/server/index.js",
        "benchmark": "./scripts/run-benchmark.sh",
        "benchmark:light": "SCENARIO=light ./scripts/run-benchmark.sh",
        "benchmark:heavy": "SCENARIO=heavy ./scripts/run-benchmark.sh",
        "benchmark:all": "npm run benchmark:light && npm run benchmark:heavy",
        "benchmark:full": "./scripts/run-all.sh",
        "docker:valkey:up": "docker-compose -f docker-compose.yml up -d valkey",
        "docker:valkey:down": "docker-compose -f docker-compose.yml down -v",
        "docker:redis:up": "docker-compose -f docker-compose.yml up -d redis",
        "docker:redis:down": "docker-compose -f docker-compose.yml down -v",
        "docker:valkey-cluster:up": "docker-compose -f docker-compose-valkey-cluster.yml up -d",
        "docker:valkey-cluster:down": "docker-compose -f docker-compose-valkey-cluster.yml down -v",
        "docker:redis-cluster:up": "docker-compose -f docker-compose-redis-cluster.yml up -d",
        "docker:redis-cluster:down": "docker-compose -f docker-compose-redis-cluster.yml down -v",
        "docker:all:up": "npm run docker:valkey:up && npm run docker:redis:up && npm run docker:valkey-cluster:up && npm run docker:redis-cluster:up",
        "docker:all:down": "npm run docker:valkey:down && npm run docker:redis:down && npm run docker:valkey-cluster:down && npm run docker:redis-cluster:down",
        "generate-report": "python3 ./scripts/generate_report.py",
        "fix-network": "./scripts/fix-network.sh",
        "lint": "eslint --fix .",
        "lint:check": "eslint .",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down -v"
    },
    "dependencies": {
        "@fastify/static": "8.2.0",
        "@valkey/valkey-glide": "1.3.5-rc13",
        "autocannon": "8.0.0",
        "axios": "^1.6.0",
        "fastify": "5.3.2",
        "ioredis": "5.6.1",
        "iovalkey": "0.3.2",
        "prom-client": "^15.1.3",
        "rate-limiter-flexible": "7.1.1"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "devDependencies": {
        "@types/autocannon": "7.12.7",
        "@types/node": "22.15.24",
        "@typescript-eslint/eslint-plugin": "8.33.0",
        "@typescript-eslint/parser": "8.33.0",
        "eslint": "^8.29.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.6.0",
        "rimraf": "6.0.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "5.8.3"
    }
}
